<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.auth.signin.SigninFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_marginTop="24dp"
        android:paddingLeft="24dp"
        android:paddingTop="26dp"
        android:paddingRight="24dp"
        android:orientation="vertical"
        >

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_gravity="center"
        android:src="@drawable/pic_signup"
        android:layout_width="110dp"
        android:layout_height="110dp"
        />

    <TextView
        android:layout_marginTop="16dp"
        style="@style/Textview.PoppinsNormal16sp020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Name" />

    <EditText
        android:id="@+id/etFullName"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_6"
        style="@style/EditText.PoppinsNormal14sp8D92A3"
        android:hint="Type Your Fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="16dp"
        style="@style/Textview.PoppinsNormal16sp020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Addres" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_6"
        style="@style/EditText.PoppinsNormal14sp8D92A3"
        android:hint="Type Your Email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="16dp"
        style="@style/Textview.PoppinsNormal16sp020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        />

    <EditText
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_6"
        style="@style/EditText.PoppinsNormal14sp8D92A3"
        android:hint="Type Your Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnContinue"
        android:layout_marginTop="16dp"
        android:textAllCaps="false"
        style="@style/Button.primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
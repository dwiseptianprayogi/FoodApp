<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.auth.signin.SigninFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_marginTop="24dp"
        android:paddingLeft="24dp"
        android:paddingTop="26dp"
        android:paddingRight="24dp"
        android:orientation="vertical"
        >

    <TextView
        android:layout_marginTop="16dp"
        style="@style/Textview.PoppinsNormal16sp020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number" />

    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_6"
        style="@style/EditText.PoppinsNormal14sp8D92A3"
        android:hint="Type Your Phone Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="16dp"
        style="@style/Textview.PoppinsNormal16sp020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address" />

    <EditText
        android:id="@+id/etAddress"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_6"
        style="@style/EditText.PoppinsNormal14sp8D92A3"
        android:hint="Type Your Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="16dp"
        style="@style/Textview.PoppinsNormal16sp020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="House Number" />

    <EditText
        android:id="@+id/etHouseNumber"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_6"
        style="@style/EditText.PoppinsNormal14sp8D92A3"
        android:hint="Type Your House Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="16dp"
        style="@style/Textview.PoppinsNormal16sp020202"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="City" />

    <EditText
        android:id="@+id/etCity"
        android:inputType="textPassword"
        android:layout_marginTop="6dp"
        android:padding="10dp"
        android:background="@drawable/rectangle_6"
        style="@style/EditText.PoppinsNormal14sp8D92A3"
        android:hint="Type Your City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnSignUpNow"
        android:layout_marginTop="16dp"
        android:textAllCaps="false"
        style="@style/Button.primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>